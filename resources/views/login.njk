<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Login | ACL Control Panel</title>

    <!-- Bootstrap -->
    <link href="/bower_components/gentelella/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="/bower_components/gentelella/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="/bower_components/gentelella/vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="/bower_components/gentelella/build/css/custom.min.css" rel="stylesheet">
  </head>

  <body class="login">
    <div>
      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
        	<div class="row">
        		<div class="">
        			<img src="/images/user.png" alt="..." class="img-circle profile_img" style="margin-top:0 !important; margin-left: 25%; width: 50%; ">
        		</div>
        	</div>
          <section class="login_content">
          	{{ form.open({url: '/login', method: 'POST'}) }}
              {{ csrfField }}
              <h1>Access Credentials</h1>
              {% if old('error') %}
              <div class="alert alert-danger alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span>
                </button>
                <strong>Error: </strong> {{ old('error') }}
              </div>
              {% endif %}
              <div class="form-group{% if old('error') %} has-error{% endif %}">
  				      <div class="col-md-12">
  				        <input id="email" type="email" class="form-control" name="email" value="{{ old('email') }}" placeholder="email" required autofocus>
  				      </div>
			       </div>
             <div class="form-group{% if old('error') %} has-error{% endif %}">
                <div class="col-md-12">
                    <input id="password" type="password" class="form-control" placeholder="Password" name="password" required>                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="remember"> Remember Me
                        </label>
                    </div>
                </div>
            </div>
              <div>
              	<button type="submit" class="btn btn-default submit">Login</button>                
                <a class="reset_pass" href="#">Forgot Your Password?</a>
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <div class="clearfix"></div>
                <br />

                <div>
                  <h1>ACL Admin Control!</h1>
                  <p>©2017 All rigths reserved. ACL</p>
                </div>
              </div>
            {{ form.close() }}
          </section>
        </div>
      </div>
    </div>
    <!-- jQuery -->
    <script src="/bower_components/gentelella/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="/bower_components/gentelella/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
</html>